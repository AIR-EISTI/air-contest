<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "fr.aireisti.aircontest.models.Exercice" table="EXERCICE">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name="title" column="title" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="state" column="state">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">fr.aireisti.aircontest.models.State</param>
            </type>
        </property>
        <property name="points" column="points" type="int"/>
        <property name="tournament" column="tournament" type="boolean"/>

    </class>
</hibernate-mapping>